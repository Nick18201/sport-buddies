<div class="container-index margin-navbar">
  <section class="search-container">
      <div class="form-container">
          <form action="/events" method="get" novalidate="novalidate">
              <div class="row">
                  <div class="col-lg-12">
                      <div class="row">
                          <div class="form-input-index col-lg-2 col-md-3 col-sm-12 p-0">
                              <input name="city" type="text" class="form-control search-slt" placeholder="Localisation">
                          </div>
                          <div class="form-input-index col-lg-2 col-md-3 col-sm-12 p-0">
                              <input name="date" type="date" label="Date de l'événement" class="form-control search-slt" placeholder="Date">
                          </div>
                          <div class="form-input-index col-lg-2 col-md-3 col-sm-12 p-0">
                              <select name="category" class="form-control search-slt" id="exampleFormControlSelect1" placeholder="Sport">
                                  <option>Football</option>
                                  <option>Rugby</option>
                                  <option>Basketball</option>
                                  <option>Running</option>
                                  <option>Musculation</option>
                                  <option>Randonnée</option>
                                  <option>Tennis</option>
                                  <option>Cyclisme</option>
                                  <option>Escalade</option>
                              </select>
                          </div>
                          <div class="col-lg-2 col-md-3 col-sm-12 p-0">
                              <button type="submit" class="searchformbutton wrn-btn">Rechercher</button>
                          </div>
                      </div>
                  </div>
              </div>
          </form>
      </div>
  </section>
  <div class="container-cards-map">
    <div class="index-cards">
      <div class="index-card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
