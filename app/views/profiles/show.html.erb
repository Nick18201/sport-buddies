<div class="header profile-header"></div>
<div class="container profile-container">
  <div class="profile">
    <div class="pic-holder">
      <%= cl_image_tag current_user.avatar.key, height: 200, width: 200, crop: :fill, class: "pic-holder" %>
    </div>
    <div class="btn-update">
      <%= link_to "Editer mon profil", profile_path, method: :patch, class: "btn btn-primary btn-edit" %>
    </div>
    <div class="info">
      <h3><%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></h3>
    </div>
  </div>
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
      <div class="user-description">
        <div class="user-informations">
          <div class="d-flex">
            <div>
              <div class="birthday d-flex">
                <i class="fas fa-birthday-cake profile-icone"></i>
                <p><%= current_user.age %> ans</p>
              </div>
              <div class="favorite-sports d-flex">
                <i class="fas fa-running profile-icone"></i>
                <p><%= current_user.sports %></p>
              </div>
              <div class="bio d-flex">
                <i class="fas fa-address-card profile-icone"></i>
                <p><%= current_user.description %></p>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>


